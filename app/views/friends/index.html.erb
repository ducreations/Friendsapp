<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email Address</th>
      <th>Contact Number</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.number %></td>
        <td><%= link_to "Unfriend", friend_path(friend), method: :delete, data: {confirm: "Are you sure?"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Add friend", new_friend_path %>
