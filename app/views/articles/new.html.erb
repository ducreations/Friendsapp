<h1>Write your own blog</h1>

<%= form_for @article do |f| %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, placeholder: "The Great king", required: true %>
  </div><br>
  <div class="field">
    <%= f.label :author %><br>
    <%= f.text_field :author, placeholder: "Simon Peter", required: true %>
  </div><br>
  <div class="field">
    <%= f.label :headline %><br>
    <%= f.text_field :headline, placeholder: "King Solomon of Israel", required: true %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body, placeholder: "Your blog content", required: true %>
  </div><br>

  <div class="actions">
    <%= f.submit "Save and continue", class:"btn btn-primary" %>
  </div>

<% end %>

<%= link_to "Cancel", articles_path, class:"btn btn-light" %>
