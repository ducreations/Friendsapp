<h1>Popular articles by users</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Headline</th>
    </tr>
  </thead>
  <tbody>
  <% @articles.each do |article| %>
      <tr>
        <td><%= link_to article.title, article_path(article) %></td>
        <td><%= article.author %></td>
        <td><%= article.headline %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Create an article", new_article_path %>
